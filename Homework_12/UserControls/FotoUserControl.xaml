<UserControl x:Class="UserControls.FotoUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" 
             d:DesignWidth="300">

    <GroupBox Header="">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" 
                    BorderBrush="Black"                    
                    BorderThickness="3"
                    CornerRadius="3">
                <Image Margin="5" 
                       Source="{Binding ImageSourceUC, RelativeSource={RelativeSource AncestorType=local:FotoUserControl}}"/>
            </Border>


            <Button Grid.Row="1"
                    Command="{Binding CommandReviewUC, RelativeSource={RelativeSource AncestorType=local:FotoUserControl}}"
                    Content="Обзор..." 
                    HorizontalAlignment="Right" 
                    Margin="0 5 5 0"/>

        </Grid>        
    </GroupBox>
</UserControl>
