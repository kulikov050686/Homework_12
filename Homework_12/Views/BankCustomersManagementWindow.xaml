<Window x:Class="Views.BankCustomersManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Views"
        xmlns:uc="clr-namespace:UserControls"
        mc:Ignorable="d"
        MaxHeight="800"
        MaxWidth="900"
        Title="{Binding Title}"       
        DataContext="{Binding BankCustomersManagementVM, Source={StaticResource Locator}}">
    
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <uc:FotoUserControl TitleUC="Фото"/>
            <uc:PersonUserControl TitleUC="Данные клиента"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <uc:PassportUserControl TitleUC="Паспорт"/>
            <uc:AddressUserControl TitleUC="Адрес прописки"/>
            <uc:AddressUserControl TitleUC="Адрес регистрации"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" 
                    Height="50" 
                    HorizontalAlignment="Right">
            <Button Content="Пименить" 
                    Margin="5 0 5 0" 
                    Width="80"/>
            <Button Content="Отмена" 
                    Margin=" 5 0 5 0" 
                    Width="80"/>
        </StackPanel>
    </StackPanel>
</Window>
